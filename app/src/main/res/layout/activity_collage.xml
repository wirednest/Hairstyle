<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wirednest.apps.hairstyle.activity.CollageActivity"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/homescreen_background">

        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/fragment_container_collage"
            android:layout_width="match_parent"
            android:layout_height="350dp">

        </FrameLayout>

        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="#65093a"
            android:layout_weight="1">

        </FrameLayout>
        <com.rey.material.widget.Button
            style="@style/Material.Drawable.Ripple.Wave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            app:rd_enable="true"
            android:background="@color/pink_dark"
            android:textColor="@android:color/white"
            android:id="@+id/saveFrame"
            android:layout_gravity="bottom" />

    </LinearLayout>


</FrameLayout>
