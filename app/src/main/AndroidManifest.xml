<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.wirednest.apps.hairstyle" >

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        tools:replace="android:icon,android:theme" >
        <meta-data
            android:name="DATABASE"
            android:value="hairstyle.db" />
        <meta-data
            android:name="VERSION"
            android:value="1" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="com.wirednest.apps" />
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name=".activity.SplashScreenActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_album"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="com.wirednest.apps.hairstyle.MAINACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.AlbumActivity"
            android:label="@string/title_activity_album"
            android:theme="@style/AppThemeDragger" >
        </activity>
        <activity
            android:name=".activity.AlbumPhotoActivity"
            android:label="@string/title_activity_album"
            android:theme="@style/AppThemeDragger" >
        </activity>
        <activity
            android:name=".activity.AlbumAddActivity"
            android:theme="@style/AppThemeDragger"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity
            android:name=".activity.CaptureActivity"
            android:label="@string/title_activity_camera"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activity.CameraActivity"
            android:label="@string/title_activity_camera" >
        </activity>
        <activity
            android:name=".activity.PhotoEditActivity"
            android:label="@string/title_activity_photo_edit" >
        </activity>
        <activity
            android:name=".ViewPhotoActivity"
            android:label="@string/title_activity_view_photo" >
        </activity>
        <activity
            android:name=".HairStyleCategoriesActivity"
            android:label="@string/title_activity_hair_style_categories" >
        </activity>
        <activity
            android:name=".activity.FormPicActivity"
            android:label="@string/title_activity_form_pic" >
        </activity>
        <activity
            android:name=".activity.PreviewActivity"
            android:label="@string/title_activity_preview" >
        </activity>
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <provider
            android:name="com.facebook.FacebookContentProvider"
            android:authorities="com.facebook.app.FacebookContentProvider1258781384148572"
            android:exported="true" />

        <activity
            android:name=".activity.PreviewImageActivity"
            android:label="@string/title_activity_preview_image" >
        </activity>
        <activity
            android:name=".activity.FullScreenActivity"
            android:label="@string/title_activity_full_screen" >
        </activity>
    </application>

</manifest>
